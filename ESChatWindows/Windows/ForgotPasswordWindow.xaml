        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESChatWindows.Windows"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Reset password" Height="300" Width="300">
    <Grid>
        <Label Content="Reset token was sent to your email" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <xctk:WatermarkTextBox Height="23" Margin="10,41,10,0" TextWrapping="Wrap" Text="" Watermark="Enter reset token" VerticalAlignment="Top"/>

    </Grid>

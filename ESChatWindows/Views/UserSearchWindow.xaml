<Window x:Class="ESChatWindows.Views.UserSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESChatWindows.Windows"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Search for user" Height="300" Width="300">
    <Grid>
        <xctk:WatermarkTextBox Name="WTBUsername" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" Watermark="Enter username" VerticalAlignment="Top" KeyDown="WTBUsername_KeyDown"/>
        <ListView Margin="10,38,10,35">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="OK" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75"/>

    </Grid>
</Window>
